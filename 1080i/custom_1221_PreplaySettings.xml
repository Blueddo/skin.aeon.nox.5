<?xml version="1.0" encoding="UTF-8"?>
<window id="1221" type="dialog">
	<defaultcontrol always="true">90200</defaultcontrol>
	<coordinates>
		<system>1</system>
		<posx>360</posx>
		<posy>179</posy>
	</coordinates>
	<include>dialogeffect</include>
	<controls>
		<control type="image">
			<description>background image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1200</width>
			<height>722</height>
			<texture border="40">dialogs/default/bg.png</texture>
		</control>

		<!-- Dialog Title -->
		<control type="label" id="2">
			<description>header label</description>
			<posx>30</posx>
			<posy>32</posy>
			<width>1140</width>
			<height>40</height>
			<font>font15_title</font>
			<label>$LOCALIZE[42422]</label> <!-- STRING: Preplay Settings -->
			<align>center</align>
			<textcolor>dialogheader</textcolor>
		</control>
		<control type="image">
			<posx>32</posx>
			<posy>88</posy>
			<width>1136</width>
			<height>600</height>
			<texture border="5">dialogs/default/inner2.png</texture>
		</control>
		<control type="grouplist" id="90200">
			<description>control area</description>
			<posx>32</posx>
			<posy>88</posy>
			<width>1136</width>
			<height>600</height>
			<itemgap>0</itemgap>
			<itemgap>0</itemgap>
			<pagecontrol>6</pagecontrol>
			<onup>90200</onup>
			<ondown>90200</ondown>
			<onleft>noop</onleft>
			<onright>noop</onright>

			<!-- Blur Background -->
			<control type="radiobutton" id="90201">
				<posx>0</posx>
				<posy>0</posy>
				<height>75</height>
				<width>1136</width>
				<label>42155</label>
				<onclick>Skin.ToggleSetting(Preplay.Blur)</onclick>
				<selected>Skin.HasSetting(Preplay.Blur)</selected>
			</control>

			<!-- Show Media Flags -->
			<control type="radiobutton" id="90202">
				<posx>0</posx>
				<posy>0</posy>
				<height>75</height>
				<width>1136</width>
				<label>42316</label>
				<onclick>Skin.ToggleSetting(Preplay.DisableMediaFlags)</onclick>
				<selected>!Skin.HasSetting(Preplay.DisableMediaFlags)</selected>
			</control>


			<!-- Reset -->
			<control type="button" id="90215">
				<posx>0</posx>
				<posy>0</posy>
				<height>75</height>
				<width>1136</width>
				<label>$LOCALIZE[42134]</label> <!-- STRING: Reset Preplay Settings -->
				<onclick>ActivateWindow(1222)</onclick>
				<enable>!IsEmpty(Skin.String(OSD.DefaultButton)) | !IsEmpty(Skin.String(OSD.VideoIconStyle)) | !IsEmpty(Skin.String(OSD.SpinningDiscStyle)) | !IsEmpty(Skin.String(OSD.Plot)) | Skin.HasSetting(OSD.MediaFlags.Disable) | Skin.HasSetting(OSD.FullResolutionFlag.Enable) | Skin.HasSetting(OSD.EndTime.Disable) | Skin.HasSetting(OSD.PauseSymbol.Disable) | Skin.HasSetting(OSD.TopBarHide.Enable) | !IsEmpty(Skin.String(OSD.TopBarHide.Delay)) | Skin.HasSetting(OSD.OpaqueBackground.Enable) | !IsEmpty(Skin.String(Colour.OSDThemeColour)) | !IsEmpty(Skin.String(Colour.OSDProgressBarColour)) | Skin.HasSetting(OSD.TimeRemaining.Enable)</enable>
				<colordiffuse>$VAR[Colour_OSDThemeColourVar]</colordiffuse>
			</control>
		</control>

		<!-- Scrollbar -->
		<control type="scrollbar" id="6">
			<posx>1166</posx>
			<posy>88</posy>
			<width>14</width>
			<height>600</height>
			<texturesliderbackground>-</texturesliderbackground>
			<texturesliderbar colordiffuse="55ffffff" border="1">scrollbar/texturesliderbar2.png</texturesliderbar>
			<texturesliderbarfocus border="1">scrollbar/texturesliderbar2.png</texturesliderbarfocus>
			<showonepage>false</showonepage>
			<orientation>vertical</orientation>
		</control>

	</controls>
</window>