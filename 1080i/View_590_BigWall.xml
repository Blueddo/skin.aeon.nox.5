<?xml version="1.0" encoding="UTF-8"?>
<includes>
  <include name="WallBackPanel2">
    <control type="image">
      <description>background image</description>
      <posx>30</posx>
      <posy>900</posy>
      <width>1860</width>
      <height>784</height>
      <texture border="40">panel_reflect.png</texture>
    </control>
    <control type="image">
      <description>background image</description>
      <posx>30</posx>
      <posy>148</posy>
      <width>1860</width>
      <height>784</height>
      <texture border="40">listpanel_back.png</texture>
    </control>
  </include>
  <!-- Music Wall -->
  <include name="MusicWallBig">
    <control type="group">
      <visible>Control.IsVisible(590) + !Window.IsActive(addoninformation)</visible>
      <posy>0</posy>
      <include>ViewAnimation</include>
      <include>WallBackPanel2</include>
      <control type="panel" id="590">
        <viewtype label="Big Icons">icon</viewtype>
        <posx>60</posx>
        <posy>179</posy>
        <width>1800</width>
        <height>720</height>
        <onleft>SetProperty(MediaMenu,True,home)</onleft>
        <onleft>SetFocus(9050,0)</onleft>
        <onright>noop</onright>
        <onup>590</onup>
        <ondown>590</ondown>
        <pagecontrol>60</pagecontrol>
        <scrolltime tween="quadratic" easing="out">300</scrolltime>
        <visible>!Container.Content(songs) + !Container.Content(empty)</visible>
        <itemlayout height="360" width="360">
          <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>360</width>
            <height>360</height>
            <aspectratio>scale</aspectratio>
            <texture>$INFO[ListItem.Art(thumb)]</texture>
            <bordertexture border="2">thumbs/panel_border3.png</bordertexture>
            <bordersize>2</bordersize>
            <colordiffuse>$VAR[Fade_UnfocusedItem]</colordiffuse>
          </control>
          <control type="group">
            <visible>Container.Content(artists)</visible>
            <control type="image">
              <posy>310</posy>
              <width>360</width>
              <height>50</height>
              <texture>black.png</texture>
              <bordersize>2</bordersize>
              <colordiffuse>88ffffff</colordiffuse>
            </control>
            <control type="label">
              <posx>180</posx>
              <posy>320</posy>
              <width>360</width>
              <height>30</height>
              <align>center</align>
              <textoffsetx>4</textoffsetx>
              <textcolor>grey2</textcolor>
              <info>ListItem.Label</info>
            </control>
          </control>
        </itemlayout>
        <focusedlayout height="360" width="360">
          <control type="group">
            <animation type="Focus">
              <effect type="zoom" start="95" end="100" time="200" tween="sine" easing="inout" center="auto"/>
              <effect type="fade" start="80" end="100" time="200" tween="sine" easing="in"/>
            </animation>
            <control type="image">
              <posx>0</posx>
              <posy>0</posy>
              <width>360</width>
              <height>360</height>
              <aspectratio>scale</aspectratio>
              <texture>$INFO[ListItem.Art(thumb)]</texture>
              <bordersize>8</bordersize>
            </control>
            <control type="image">
              <posx>0</posx>
              <posy>0</posy>
              <width>360</width>
              <height>360</height>
              <aspectratio>scale</aspectratio>
              <texture>empty.png</texture>
              <bordertexture border="8">thumbs/thumbnail_focused.png</bordertexture>
              <bordersize>8</bordersize>
              <colordiffuse>$VAR[Colour_BigIconsHighlightColourVar]</colordiffuse>
            </control>
            <!-- Black Overlay -->
            <control type="image">
              <posy>310</posy>
              <width>360</width>
              <height>50</height>
              <texture>black.png</texture>
              <bordersize>8</bordersize>
              <colordiffuse>88ffffff</colordiffuse>
              <visible>Container.Content(artists)</visible>
            </control>
            <!-- Artists Label -->
            <control type="label">
              <posx>180</posx>
              <posy>320</posy>
              <width>360</width>
              <height>30</height>
              <align>center</align>
              <textoffsetx>4</textoffsetx>
              <textcolor>white</textcolor>
              <info>ListItem.Label</info>
              <visible>Container.Content(artists)</visible>
            </control>
          </control>
        </focusedlayout>
      </control>
      <control type="scrollbar" id="60">
        <posx>1801</posx>
        <posy>179</posy>
        <width>8</width>
        <height>720</height>
        <colordiffuse>55ffffff</colordiffuse>
        <onleft>50</onleft>
        <onright>SetProperty(MediaMenu,True,home)</onright>
        <onright>SetFocus(9050,0)</onright>
        <ondown>60</ondown>
        <onup>60</onup>
        <showonepage>false</showonepage>
        <texturesliderbackground>-</texturesliderbackground>
        <texturesliderbar border="1">scrollbar/texturesliderbar2.png</texturesliderbar>
        <texturesliderbarfocus border="1">scrollbar/texturesliderbar2.png</texturesliderbarfocus>
        <animation effect="fade" start="100" end="0" time="500" delay="500" condition="!Control.HasFocus(60) + !Container.Scrolling">Conditional</animation>
      </control>
    </control>
  </include>
</includes>
