<?xml version="1.0" encoding="UTF-8"?>
<window id="99">
  <defaultcontrol always="true">50</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <views>50,54,57,500</views>
  <onload>SetProperty(Window.HasSettings,True,home)</onload>
  <onload>ClearProperty(MediaMenu,Home)</onload>
  <onload>Skin.SetString(SectionType,channels)</onload>
  <onunload>Skin.Reset(SectionType)</onunload>
  <onunload>ClearProperty(Window.HasSettings,Home)</onunload>
  <controls>
    <include>CommonBackground</include>
    <control type="group">
      <include>Window_OpenClose_Animation</include>
      <include>ChannelList</include>
      <!-- view id = 50 -->
      <include>View_54_ShowCase</include>
      <!-- view id = 54 -->
      <include>PosterShift</include>
      <!-- view id = 57 -->
      <include>AddonWall</include>
      <!-- view id = 500 -->
    </control>
    <control type="group">
      <visible>Control.IsVisible(54) | Control.IsVisible(500) | Control.IsVisible(57)</visible>
      <animation effect="slide" tween="cubic" time="720" start="0,806" end="0,0">VisibleChange</animation>
      <include>Window_OpenClose_Animation</include>
      <posy>-30</posy>
      <control type="group">
        <posx>410</posx>
        <posy>1010</posy>
        <visible>Control.IsVisible(54)</visible>
        <control type="label">
          <posx>0</posx>
          <posy>0</posy>
          <width>1100</width>
          <height>42</height>
          <aligny>top</aligny>
          <align>center</align>
          <font>font16_title</font>
          <textcolor>white</textcolor>
          <scroll>true</scroll>
          <label>[B]$INFO[ListItem.Label][/B]</label>
          <textoffsety>-2</textoffsety>
          <textoffsetx>30</textoffsetx>
        </control>
        <control type="label">
          <posx>-300</posx>
          <posy>40</posy>
          <width>1700</width>
          <height>30</height>
          <align>center</align>
          <font>font13_title</font>
          <textcolor>white</textcolor>
          <scroll>true</scroll>
          <label>$INFO[ListItem.Property(Addon.Summary)]</label>
          <textoffsetx>30</textoffsetx>
        </control>
      </control>
      <control type="group">
        <visible>Control.IsVisible(500) | Control.IsVisible(57)</visible>
        <animation effect="slide" start="0" end="40" time="720" tween="cubic" easing="inout" condition="Control.IsVisible(57)">Conditional</animation>
        <animation effect="slide" tween="cubic" time="720" start="0,806" end="0,0">VisibleChange</animation>
        <control type="group">
          <posx>90</posx>
          <posy>1010</posy>
          <control type="label">
            <posx>0</posx>
            <posy>0</posy>
            <width>1150</width>
            <height>42</height>
            <aligny>top</aligny>
            <align>left</align>
            <font>font16_title</font>
            <textcolor>white</textcolor>
            <scroll>true</scroll>
            <label>[B]$INFO[ListItem.Label][/B]</label>
            <textoffsety>-2</textoffsety>
            <textoffsetx>30</textoffsetx>
          </control>
          <control type="label">
            <posx>0</posx>
            <posy>45</posy>
            <width>1500</width>
            <height>30</height>
            <align>left</align>
            <font>font13_title</font>
            <textcolor>white</textcolor>
            <scroll>true</scroll>
            <label>$INFO[ListItem.Property(Addon.Summary)]</label>
            <textoffsetx>30</textoffsetx>
          </control>
        </control>
        <control type="label">
          <posx>1800</posx>
          <posy>1000</posy>
          <width>198</width>
          <height>90</height>
          <align>right</align>
          <label>$INFO[ListItem.Property(Addon.Version),[B],[/B]]</label>
          <font>font35_title</font>
          <textcolor>white</textcolor>
          <wrapmultiline>true</wrapmultiline>
        </control>
      </control>
      <control type="image">
        <posx>0</posx>
        <posy>970</posy>
        <width>1920</width>
        <height>140</height>
        <texture border="1">gradient_floor.png</texture>
        <colordiffuse>$VAR[Colour_ThemeColourVar]</colordiffuse>
      </control>
    </control>
    <include>ScrollOffsetLabel</include>
    <include>Topbar</include>
    <include>SideBlade</include>
    <!--Debug Info -->
    <control type="image">
      <posx>0</posx>
      <posy>0</posy>
      <width>1920</width>
      <height>365</height>
      <texture border="1,1,1,40">topbar.png</texture>
      <visible>Skin.HasSetting(DebugInfo)</visible>
    </control>
    <control type="grouplist">
      <visible>Skin.HasSetting(DebugInfo)</visible>
      <orientation>vertical</orientation>
      <posx>30</posx>
      <posy>0</posy>
      <width>1920</width>
      <height>317</height>
      <align>center</align>
      <aligny>center</aligny>
      <itemgap>0</itemgap>
      <control type="label">
        <description>Debug Info</description>
        <width>1770</width>
        <height>60</height>
        <align>left</align>
        <aligny>center</aligny>
        <font>font14</font>
        <textcolor>grey2</textcolor>
        <label>[COLOR $VAR[Colour_ThemeColourVar]]DEBUG INFO[/COLOR]</label>
      </control>
      <control type="label">
        <description>Window Name</description>
        <width>1770</width>
        <height>45</height>
        <align>left</align>
        <aligny>center</aligny>
        <font>font14</font>
        <textcolor>grey2</textcolor>
        <label>[COLOR $VAR[Colour_ThemeColourVar]]Window:[/COLOR] MyChannels.xml</label>
      </control>
      <control type="label">
        <description>row 1 label</description>
        <width>1770</width>
        <height>45</height>
        <align>left</align>
        <aligny>center</aligny>
        <font>font14</font>
        <label>[COLOR $VAR[Colour_ThemeColourVar]]Section Type:[/COLOR] $INFO[Skin.String(SectionType)] [COLOR $VAR[Colour_ThemeColourVar]]- Container Content:[/COLOR] $VAR[ContainerContent] [COLOR $VAR[Colour_ThemeColourVar]]- ListItem Type:[/COLOR] $VAR[ListItemType]</label>
        <textcolor>grey2</textcolor>
      </control>
      <control type="label">
        <description>row 2 label</description>
        <width>1770</width>
        <height>60</height>
        <align>left</align>
        <aligny>center</aligny>
        <font>font14</font>
        <label>[COLOR $VAR[Colour_ThemeColourVar]]First Title:[/COLOR] $INFO[Container.FirstTitle] [COLOR $VAR[Colour_ThemeColourVar]]- Parent Title:[/COLOR] $INFO[Container.Property(parentTitle)]</label>
        <textcolor>grey2</textcolor>
      </control>
      <control type="label">
        <description>row 2 label</description>
        <width>1770</width>
        <height>45</height>
        <align>left</align>
        <aligny>center</aligny>
        <font>font14</font>
