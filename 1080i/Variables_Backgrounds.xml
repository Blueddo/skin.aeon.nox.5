<?xml version="1.0" encoding="UTF-8"?>
<includes>
  <variable name="GlobalBackgroundVar">
    <value condition="!IsEmpty(ListItem.Art(fanart)) + ![Player.HasVideo + !Skin.HasSetting(ShowBackgroundVideo)]">$INFO[ListItem.Art(fanart)]</value>
  </variable>
  <variable name="VideoBackgroundVar">
    <value condition="Container.Content(movies)">$INFO[Skin.String(Movie.VideoFanart)]</value>
    <value condition="[Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes)]">$INFO[Skin.String(TVShow.VideoFanart)]</value>
    <value>$INFO[Skin.String(Video.VideoFanart)]</value>
  </variable>
  <variable name="VideoBackgroundClickVar">
    <value condition="Container.Content(movies) + IsEmpty(Skin.String(Movie.VideoFanart))">Skin.SetString(Movie.VideoFanart,1)</value>
    <value condition="Container.Content(movies) + String.IsEqual(Skin.String(Movie.VideoFanart),1)">Skin.SetString(Movie.VideoFanart,2)</value>
    <value condition="Container.Content(movies) + String.IsEqual(Skin.String(Movie.VideoFanart),2)">Skin.Reset(Movie.VideoFanart)</value>
    <value condition="[Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes)] + IsEmpty(Skin.String(TVShow.VideoFanart))">Skin.SetString(TVShow.VideoFanart,1)</value>
    <value condition="[Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes)] + String.IsEqual(Skin.String(TVShow.VideoFanart),1)">Skin.SetString(TVShow.VideoFanart,2)</value>
    <value condition="[Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes)] + String.IsEqual(Skin.String(TVShow.VideoFanart),2)">Skin.SetString(TVShow.VideoFanart,3)</value>
    <value condition="[Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes)] + String.IsEqual(Skin.String(TVShow.VideoFanart),3)">Skin.Reset(TVShow.VideoFanart)</value>
    <value condition="IsEmpty(Skin.String(Video.VideoFanart))">Skin.SetString(Video.VideoFanart,2)</value>
    <value condition="String.IsEqual(Skin.String(Video.VideoFanart),2)">Skin.SetString(Video.VideoFanart,3)</value>
    <value condition="String.IsEqual(Skin.String(Video.VideoFanart),3)">Skin.Reset(Video.VideoFanart)</value>
  </variable>
</includes>
