<?xml version="1.0" encoding="UTF-8"?>
<includes>
  <!-- Video Icons2 -->
  <include name="Wall_Large">
    <control type="group">
      <visible>Control.IsVisible(499) + !Window.IsActive(addoninformation)</visible>
      <include>ViewAnimation</include>
      <posy>-65</posy>
      <control type="image">
        <description>background image</description>
        <posx>130</posx>
        <posy>1137</posy>
        <width>1725</width>
        <height>918</height>
        <texture border="40">panel_reflect.png</texture>
      </control>
      <control type="image">
        <description>background image</description>
        <posx>97.5</posx>
        <posy>138</posy>
        <width>1725</width>
        <height>918</height>
        <texture border="40">listpanel_back.png</texture>
      </control>
      <control type="panel" id="499">
        <posx>127</posx>
        <posy>170</posy>
        <width>1665</width>
        <height>855</height>
        <onright>noop</onright>
        <onleft>SetProperty(MediaMenu,True,home)</onleft>
        <onleft>SetFocus(9050,0)</onleft>
        <onup>499</onup>
        <ondown>499</ondown>
        <pagecontrol>60</pagecontrol>
        <preloaditems>2</preloaditems>
        <viewtype label="Small Icons">icons</viewtype>
        <scrolltime tween="quadratic" easing="out">300</scrolltime>
        <visible>[Container.Content(tvshows) | Container.Content(movies)] + !String.IsEqual(Skin.String(Filter.Type),homemovies)</visible>
        <itemlayout height="285" width="185">
          <control type="image">
            <width>185</width>
            <height>285</height>
            <aspectratio aligny="top" scalediffuse="false">scale</aspectratio>
            <texture>$INFO[ListItem.Art(smallThumb)]</texture>
            <bordertexture border="2">thumbs/panel_border3.png</bordertexture>
            <bordersize>2</bordersize>
            <colordiffuse>$VAR[Fade_UnfocusedItem]</colordiffuse>
          </control>
          <!-- Watched Status Ribbon -->
          <control type="image">
            <posx>105</posx>
            <posy>0</posy>
            <width>85</width>
            <height>85</height>
            <texture>$VAR[OverlayVar]</texture>
            <aspectratio align="center" aligny="top">keep</aspectratio>
            <bordersize>1</bordersize>
            <visible>!Skin.HasSetting(Enable.Circles)</visible>
          </control>
          <!-- Watched Status Upper Circle -->
          <control type="image">
            <posx>141</posx>
            <posy>8</posy>
            <width>36</width>
            <height>36</height>
            <aspectratio>keep</aspectratio>
            <texture>$VAR[OverlayVar]</texture>
            <colordiffuse>$VAR[Colour_SmallIconsWatchedStatusColourVar]</colordiffuse>
            <visible>Skin.HasSetting(Enable.Circles) + !Skin.HasSetting(Enable.LowerCircles)</visible>
          </control>
          <!-- Watched Status Lower Circle -->
          <control type="image">
            <posx>141</posx>
            <posy>241</posy>
            <width>36</width>
            <height>36</height>
            <aspectratio>keep</aspectratio>
            <texture>$VAR[OverlayVar]</texture>
            <colordiffuse>$VAR[Colour_SmallIconsWatchedStatusColourVar]</colordiffuse>
            <visible>Skin.HasSetting(Enable.Circles) + Skin.HasSetting(Enable.LowerCircles)</visible>
          </control>
          <control type="group">
            <posx>8</posx>
            <posy>8</posy>
            <include condition="!Skin.HasSetting(Enable.LowerCircles) + !Skin.HasSetting(Disable.UnwatchedIcon)">UnwatchedIcon</include>
          </control>
          <control type="group">
            <posx>8</posx>
            <posy>241</posy>
            <include condition="Skin.HasSetting(Enable.LowerCircles) + !Skin.HasSetting(Disable.UnwatchedIcon)">UnwatchedIcon</include>
          </control>
        </itemlayout>
        <focusedlayout height="285" width="185">
          <control type="group">
            <animation type="Focus">
              <effect type="zoom" start="95" end="115" time="200" tween="sine" easing="inout" center="auto"/>
              <effect type="fade" start="80" end="100" time="200" tween="sine" easing="in"/>
            </animation>
            <control type="image">
              <width>185</width>
              <height>285</height>
              <aspectratio aligny="top" scalediffuse="false">scale</aspectratio>
              <texture>$INFO[ListItem.Art(smallThumb)]</texture>
              <bordersize>8</bordersize>
            </control>
            <control type="image">
              <posx>1</posx>
              <posy>1</posy>
              <width>183</width>
              <height>283</height>
              <aspectratio>stretch</aspectratio>
              <texture>empty.png</texture>
              <bordertexture border="8">thumbs/thumbnail_focused.png</bordertexture>
              <bordersize>8</bordersize>
              <colordiffuse>$VAR[Colour_SmallIconsHighlightColourVar]</colordiffuse>
            </control>
            <!-- Watched Status Ribbon -->
            <control type="image">
              <posx>105</posx>
              <posy>5</posy>
              <width>85</width>
              <height>85</height>
              <texture>$VAR[OverlayVar]</texture>
              <aspectratio align="center" aligny="top">keep</aspectratio>
              <bordersize>2</bordersize>
              <visible>!Skin.HasSetting(Enable.Circles)</visible>
            </control>
            <!-- Watched Status Upper Circle -->
            <control type="image">
              <posx>141</posx>
              <posy>8</posy>
              <width>36</width>
              <height>36</height>
              <aspectratio>keep</aspectratio>
              <texture>$VAR[OverlayVar]</texture>
              <colordiffuse>$VAR[Colour_SmallIconsWatchedStatusColourVar]</colordiffuse>
              <visible>Skin.HasSetting(Enable.Circles) + !Skin.HasSetting(Enable.LowerCircles)</visible>
            </control>
            <!-- Watched Status Lower Circle -->
            <control type="image">
              <posx>141</posx>
              <posy>241</posy>
              <width>36</width>
              <height>36</height>
              <aspectratio>keep</aspectratio>
              <texture>$VAR[OverlayVar]</texture>
              <colordiffuse>$VAR[Colour_SmallIconsWatchedStatusColourVar]</colordiffuse>
              <visible>Skin.HasSetting(Enable.Circles) + Skin.HasSetting(Enable.LowerCircles)</visible>
            </control>
            <control type="group">
              <posx>8</posx>
              <posy>8</posy>
              <include condition="!Skin.HasSetting(Enable.LowerCircles) + !Skin.HasSetting(Disable.UnwatchedIcon)">UnwatchedIcon</include>
            </control>
            <control type="group">
              <posx>8</posx>
              <posy>241</posy>
              <include condition="Skin.HasSetting(Enable.LowerCircles) + !Skin.HasSetting(Disable.UnwatchedIcon)">UnwatchedIcon</include>
            </control>
          </control>
        </focusedlayout>
      </control>
      <control type="scrollbar" id="60">
        <posx>1789.5</posx>
        <posy>230</posy>
        <width>15</width>
        <height>800</height>
        <colordiffuse>55ffffff</colordiffuse>
        <onleft>50</onleft>
        <onright>SetProperty(MediaMenu,True,home)</onright>
        <onright>SetFocus(9050,0)</onright>
        <ondown>60</ondown>
        <onup>60</onup>
        <showonepage>false</showonepage>
        <texturesliderbackground>-</texturesliderbackground>
        <texturesliderbar border="1">scrollbar/texturesliderbar2.png</texturesliderbar>
        <texturesliderbarfocus border="1">scrollbar/texturesliderbar2.png</texturesliderbarfocus>
        <animation effect="fade" start="100" end="0" time="500" delay="500" condition="!Control.HasFocus(60) + !Container.Scrolling">Conditional</animation>
      </control>
    </control>
  </include>
</includes>
