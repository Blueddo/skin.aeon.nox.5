<?xml version="1.0" encoding="UTF-8"?>
<includes>
  <!-- Video Episode -->
  <include name="VideoEpisode">
    <control type="group">
      <visible>Control.IsVisible(502) + !Window.IsActive(addoninformation)</visible>
      <include>ViewAnimation</include>
      <control type="group">
        <posx>0</posx>
        <posy>0</posy>
        <control type="list" id="502">
          <posx>60</posx>
          <posy>180</posy>
          <width>1820</width>
          <height>780</height>
          <orientation>vertical</orientation>
          <movement>2</movement>
          <focusposition>3</focusposition>
          <onleft>SetProperty(MediaMenu,True,home)</onleft>
          <onleft>SetFocus(9050,0)</onleft>
          <onright>noop</onright>
          <onup>502</onup>
          <ondown>502</ondown>
          <pagecontrol>60</pagecontrol>
          <viewtype label="Episode">list</viewtype>
          <scrolltime tween="quadratic" easing="out">200</scrolltime>
          <visible>Container.Content(episodes)</visible>
          <animation effect="slide" end="0,0" time="160" condition="Container(502).Row(0)">Conditional</animation>
          <animation effect="slide" end="0,0" time="160" condition="Container(502).Row(1)">Conditional</animation>
          <animation effect="slide" end="0,0" time="160" condition="Container(502).Row(2)">Conditional</animation>
          <animation effect="slide" end="0,0" time="160" condition="Container(502).Row(3)">Conditional</animation>
          <animation effect="slide" end="0,0" time="160" condition="Container(502).Row(4)">Conditional</animation>
          <animation effect="slide" end="0,0" time="160" condition="Container(502).Row(5)">Conditional</animation>
          <itemlayout height="100" width="1820" condition="Container.Content(episodes)">
            <!-- Title -->
            <control type="label">
              <posx>1715</posx>
              <width>790</width>
              <height>70</height>
              <font>font30</font>
              <textcolor>grey2</textcolor>
              <selectedcolor>$VAR[Colour_EpisodeThemeColourVar]</selectedcolor>
              <align>right</align>
              <aligny>center</aligny>
              <label>$INFO[ListItem.Episode]. $INFO[ListItem.Label]</label>
            </control>
            <!-- Watched Status -->
            <control type="image">
              <posx>1750</posx>
              <posy>5</posy>
              <width>64</width>
              <height>64</height>
              <aspectratio>keep</aspectratio>
              <texture>$INFO[ListItem.Overlay,overlays/list/]</texture>
              <colordiffuse>$VAR[Colour_EpisodeWatchedStatusColourVar]</colordiffuse>
            </control>
          </itemlayout>
          <focusedlayout height="275" width="1820" condition="Container.Content(episodes)">
            <control type="image">
              <posx>1250</posx>
              <posy>-20</posy>
              <width>484</width>
              <height>290</height>
              <aspectratio>scale</aspectratio>
              <texture>$VAR[EpisodeThumbnailVar]</texture>
              <bordertexture border="20">thumbs/thumb_shadow.png</bordertexture>
              <bordersize>20</bordersize>
            </control>
            <control type="image">
              <posx>1270</posx>
              <posy>200</posy>
              <width>444</width>
              <height>50</height>
              <texture>black.png</texture>
              <colordiffuse>88ffffff</colordiffuse>
            </control>
            <!-- Rating -->
            <control type="label">
              <posx>1270</posx>
              <posy>205</posy>
              <width>444</width>
              <height>40</height>
              <align>left</align>
              <textoffsetx>10</textoffsetx>
              <textcolor>grey2</textcolor>
              <label>$INFO[ListItem.RatingAndVotes]</label>
              <font>font14</font>
            </control>
            <!-- First Aired Date -->
            <control type="label">
              <posx>1715</posx>
              <posy>205</posy>
              <width>444</width>
              <height>40</height>
              <align>right</align>
              <textoffsetx>10</textoffsetx>
              <textcolor>grey2</textcolor>
              <label>$INFO[ListItem.Date]</label>
              <font>font14</font>
            </control>
            <!-- Title -->
            <control type="label">
              <posx>1220</posx>
              <posy>-15</posy>
              <width>850</width>
              <height>70</height>
              <font>font30</font>
              <textcolor>white2</textcolor>
              <selectedcolor>$VAR[Colour_EpisodeThemeColourVar]</selectedcolor>
              <align>right</align>
              <aligny>center</aligny>
              <label>$INFO[ListItem.Episode]. $INFO[ListItem.Label]</label>
              <animation effect="fade" start="100" end="70" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(502)">Conditional</animation>
            </control>
            <!-- Plot -->
            <control type="textbox">
              <label>$VAR[PlotVar]</label>
              <posy>70</posy>
              <posx>370</posx>
              <width>850</width>
              <height>180</height>
              <align>right</align>
              <textcolor>white2</textcolor>
              <font>font15_textbox</font>
              <autoscroll time="3000" delay="6000" repeat="5000">Skin.HasSetting(Enable.AutoScroll)</autoscroll>
              <animation effect="fade" start="100" end="70" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(502)">Conditional</animation>
              <visible>!Skin.HasSetting(General.SmallPlotText)</visible>
            </control>
            <control type="textbox">
              <label>$VAR[PlotVar]</label>
              <posy>70</posy>
              <posx>370</posx>
              <width>850</width>
              <height>180</height>
              <align>right</align>
              <textcolor>white2</textcolor>
              <font>font15_textbox_episode</font>
              <autoscroll time="3000" delay="6000" repeat="5000">Skin.HasSetting(Enable.AutoScroll)</autoscroll>
              <animation effect="fade" start="100" end="70" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(502)">Conditional</animation>
              <visible>Skin.HasSetting(General.SmallPlotText)</visible>
            </control>
            <!-- Watched Status -->
            <control type="image">
              <posx>1750</posx>
              <posy>94</posy>
              <width>64</width>
              <height>64</height>
              <aspectratio>keep</aspectratio>
              <texture>$INFO[ListItem.Overlay,overlays/list/]</texture>
              <colordiffuse>$VAR[Colour_EpisodeWatchedStatusColourVar]</colordiffuse>
            </control>
          </focusedlayout>
        </control>
        <!-- Scrollbar -->
        <control type="scrollbar" id="60">
          <posx>1906</posx>
          <posy>180</posy>
          <width>14</width>
          <height>780</height>
          <colordiffuse>55ffffff</colordiffuse>
          <onup>60</onup>
          <ondown>60</ondown>
          <onleft>502</onleft>
          <onright>SetProperty(MediaMenu,True,home)</onright>
          <onright>SetFocus(9050,0)</onright>
          <texturesliderbackground>-</texturesliderbackground>
          <texturesliderbar border="1">scrollbar/texturesliderbar2.png</texturesliderbar>
          <texturesliderbarfocus border="1">scrollbar/texturesliderbar2.png</texturesliderbarfocus>
          <showonepage>false</showonepage>
          <orientation>vertical</orientation>
        </control>
      </control>
    </control>
  </include>
</includes>
