<?xml version="1.0" encoding="UTF-8"?>
<window id="1165">
  <onload>Skin.Reset(Colour.Temp)</onload>
  <defaultcontrol always="true">3110</defaultcontrol>
  <include>dialogeffect</include>
  <controls>
    <include>CommonBackground</include>
    <include>Topbar</include>
    <!-- Colour Customizer -->
    <control type="group">
      <control type="image">
        <posx>30</posx>
        <posy>60</posy>
        <width>1860</width>
        <height>980</height>
        <texture border="40">dialogs/default/bg.png</texture>
        <animation effect="fade" reversible="false" end="95" time="0" condition="true">Conditional</animation>
      </control>
      <include>Colour_Picker</include>
      <!-- Colour Swatch -->
      <control type="image">
        <posy>870</posy>
        <posx>61</posx>
        <width>140</width>
        <height>140</height>
        <texture border="5" diffuse="diffuse_color_picker.png">panel.png</texture>
        <colordiffuse>$VAR[ColourSwatch]</colordiffuse>
      </control>
      <control type="grouplist">
        <orientation>horizontal</orientation>
        <itemgap>10</itemgap>
        <posx>205</posx>
        <posy>945</posy>
        <width>1800</width>
        <!-- Colour Label -->
        <control type="label">
          <width>406</width>
          <height>60</height>
          <align>left</align>
          <textoffsetx>15</textoffsetx>
          <textcolor>grey2</textcolor>
          <label>[UPPERCASE]$INFO[Container(3110).ListItem.Label2][/UPPERCASE]</label>
        </control>
        <!-- Change Colour Palette -->
        <control type="button" id="3030">
          <width>406</width>
          <align>left</align>
          <onup>3110</onup>
          <ondown>noop</ondown>
          <onclick>$VAR[ColourPaletteSettingVar]</onclick>
          <label>$LOCALIZE[42280]: [COLOR $VAR[Colour_ThemeColourVar]]$VAR[ColourPaletteLabelVar][/COLOR]</label>
          <texturenofocus border="1">empty.png</texturenofocus>
        </control>
        <!-- Save Button -->
        <control type="button" id="3012">
          <width>406</width>
          <height>60</height>
          <onup>3110</onup>
          <ondown>noop</ondown>
          <onclick>Skin.SetString(Colour.TriPanelWatchedStatusColour,$INFO[Skin.String(Colour.Temp)])</onclick>
          <onclick>Close</onclick>
          <label>$LOCALIZE[190]</label>
          <!-- STRING: Save -->
          <texturenofocus border="1">empty.png</texturenofocus>
        </control>
        <!-- Reset to Default Button -->
        <control type="button" id="3011">
          <width>406</width>
          <height>60</height>
          <onup>3110</onup>
          <ondown>noop</ondown>
          <onright>3020</onright>
          <onclick>Skin.Reset(Colour.TriPanelWatchedStatusColour)</onclick>
          <onclick>Close</onclick>
          <label>Default</label>
          <texturenofocus border="1">empty.png</texturenofocus>
        </control>
      </control>
    </control>
  </controls>
</window>
