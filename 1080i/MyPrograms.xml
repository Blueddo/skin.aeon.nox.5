<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol always="true">50</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <onload>SetProperty(Window.HasSettings,True,home)</onload>
  <onload>ClearProperty(MediaMenu,Home)</onload>
  <onunload>ClearProperty(Window.HasSettings,Home)</onunload>
  <views>50</views>
  <controls>
    <include>CommonBackground</include>
    <control type="group">
      <include>Window_OpenClose_Animation</include>
      <include>ChannelDirectory</include>
      <!-- view id = 50 -->
    </control>
    <control type="group">
      <visible>Control.IsVisible(54) | Control.IsVisible(52) | Control.IsVisible(500) | Control.IsVisible(57)</visible>
      <visible>!Window.IsActive(addoninformation)</visible>
      <animation effect="slide" tween="cubic" time="720" start="0,806" end="0,0">VisibleChange</animation>
      <animation effect="slide" tween="cubic" time="720" start="0,806" end="0,0">WindowOpen</animation>
      <animation effect="slide" tween="cubic" time="720" end="0,806" start="0,0">WindowClose</animation>
      <posy>-30</posy>
      <control type="group">
        <visible>Control.IsVisible(54) | Control.IsVisible(52)</visible>
        <control type="group">
          <posx>410</posx>
          <posy>1010</posy>
          <control type="label">
            <posx>0</posx>
            <posy>0</posy>
            <width>1100</width>
            <height>42</height>
            <aligny>top</aligny>
            <align>center</align>
            <font>font16_title</font>
            <textcolor>white</textcolor>
            <scroll>true</scroll>
            <label>[B]$INFO[ListItem.Label][/B]</label>
            <textoffsety>-2</textoffsety>
            <textoffsetx>30</textoffsetx>
          </control>
          <control type="label">
            <posx>0</posx>
            <posy>45</posy>
            <width>1100</width>
            <height>30</height>
            <align>center</align>
            <font>font13_title</font>
            <textcolor>white</textcolor>
            <label>$INFO[ListItem.Label2]</label>
            <textoffsetx>30</textoffsetx>
          </control>
        </control>
        <control type="group">
          <posx>0</posx>
          <posy>1010</posy>
          <width>1920</width>
          <align>center</align>
          <visible>[Container.Content(albums) | Container.Content(songs)]</visible>
          <control type="group">
            <posx>120</posx>
            <control type="label">
              <posx>-10</posx>
              <width>155</width>
              <height>90</height>
              <align>center</align>
              <label>[B]$INFO[ListItem.Year][/B]</label>
              <font>font35_title</font>
              <textcolor>white</textcolor>
              <wrapmultiline>true</wrapmultiline>
            </control>
          </control>
          <control type="image">
            <posx>1600</posx>
            <colordiffuse>white</colordiffuse>
            <width>200</width>
            <fadetime>50</fadetime>
            <include>MediaFlagVars</include>
            <texture fallback="rating0.png">$INFO[ListItem.StarRating]</texture>
          </control>
        </control>
      </control>
      <control type="group">
        <visible>Control.IsVisible(500) | Control.IsVisible(57)</visible>
        <animation effect="slide" start="0" end="40" time="720" tween="cubic" easing="inout" condition="Control.IsVisible(57)">Conditional</animation>
        <animation effect="slide" tween="cubic" time="720" start="0,806" end="0,0">VisibleChange</animation>
        <control type="group">
          <visible>Control.IsVisible(500) | Control.IsVisible(57)</visible>
          <animation effect="slide" start="0" end="40" time="720" tween="cubic" easing="inout" condition="Control.IsVisible(57)">Conditional</animation>
          <animation effect="slide" tween="cubic" time="720" start="0,806" end="0,0">VisibleChange</animation>
          <control type="group">
            <posx>90</posx>
            <posy>1010</posy>
            <control type="label">
              <posx>0</posx>
              <posy>0</posy>
              <width>1150</width>
              <height>42</height>
              <aligny>top</aligny>
              <align>left</align>
              <font>font16_title</font>
              <textcolor>white</textcolor>
              <scroll>true</scroll>
              <label>[B]$INFO[ListItem.Label][/B]</label>
              <textoffsety>-2</textoffsety>
              <textoffsetx>30</textoffsetx>
            </control>
            <control type="label">
              <posx>0</posx>
              <posy>45</posy>
              <width>1500</width>
              <height>30</height>
              <align>left</align>
              <font>font13_title</font>
              <textcolor>white</textcolor>
              <label>$INFO[ListItem.Property(Addon.Summary)]</label>
              <textoffsetx>30</textoffsetx>
            </control>
          </control>
          <control type="label">
            <posx>1800</posx>
            <posy>1000</posy>
            <width>198</width>
            <height>90</height>
            <align>right</align>
            <label>$INFO[ListItem.Property(Addon.Version),[B],[/B]]</label>
            <font>font35_title</font>
            <textcolor>white</textcolor>
            <wrapmultiline>true</wrapmultiline>
          </control>
        </control>
      </control>
      <control type="image">
        <posx>0</posx>
        <posy>970</posy>
        <width>1920</width>
        <height>140</height>
        <texture border="1">gradient_floor.png</texture>
        <colordiffuse>$VAR[Colour_ThemeColourVar]</colordiffuse>
      </control>
    </control>
    <include>ScrollOffsetLabel</include>
    <include>Topbar</include>
    <control type="group">
      <posx>-440</posx>
      <animation effect="slide" start="440,0" end="0,0" time="400" tween="quadratic" easing="out" condition="IsEmpty(Window(home).Property(MediaMenu))">Conditional</animation>
      <animation effect="slide" start="0,0" end="-440,0" time="400" tween="quadratic" easing="out">WindowClose</animation>
      <posy>0</posy>
      <!-- Display Side Blade Menu Background -->
      <control type="image">
        <posx>0</posx>
        <posy>0</posy>
        <width>440</width>
        <height>1080</height>
        <texture border="40">mediamenu_back.png</texture>
      </control>
      <!-- Display Aeon Nox Logo -->
      <control type="image">
        <description>LOGO</description>
        <posx>0</posx>
        <posy>0</posy>
        <width>400</width>
        <height>120</height>
        <aspectratio>keep</aspectratio>
        <texture>aeon-nox-logo.png</texture>
      </control>
      <!-- Icon Menu -->
      <control type="group" id="9050">
        <visible>!Container.PlexContent(Movie) + !Container.PlexContent(Episode) + !Container.PlexContent(Clip)</visible>
        <posy>100</posy>
        <posx>350</posx>
        <width>35</width>
        <orientation>vertical</orientation>
        <itemgap>0</itemgap>
        <!-- Close Sideblade -->
        <control type="button" id="104">
          <texturefocus border="0"/>
          <texturenofocus border="0"/>
          <posy>60</posy>
          <width>60</width>
          <height>35</height>
          <textoffsetx>15</textoffsetx>
          <textcolor>grey</textcolor>
          <focusedcolor>$VAR[Colour_ThemeColourVar]</focusedcolor>
          <textwidth>300</textwidth>
          <aligny>center</aligny>
          <onleft>200</onleft>
          <onright>ClearProperty(MediaMenu,Home)</onright>
          <onright>50</onright>
          <onup>108</onup>
          <ondown>105</ondown>
          <onback>ClearProperty(MediaMenu,Home)</onback>
          <onback>50</onback>
          <font>IconTiny</font>
          <label></label>
          <onclick>ClearProperty(MediaMenu,Home)</onclick>
          <onclick>50</onclick>
          <onclick>Control.SetFocus(50)</onclick>
          <visible>![Window.IsActive(501) + Container.PlexFilter(recentlyAdded)] + !Container.PlexFilter(recentlyViewedShows)</visible>
        </control>
        <!-- Home Button -->
        <control type="button" id="105">
          <texturefocus border="0"/>
          <texturenofocus border="0"/>
          <posy>95</posy>
          <width>60</width>
          <height>35</height>
          <textoffsetx>15</textoffsetx>
          <textcolor>grey</textcolor>
          <focusedcolor>$VAR[Colour_ThemeColourVar]</focusedcolor>
          <textwidth>300</textwidth>
          <aligny>center</aligny>
          <onleft>200</onleft>
          <onright>ClearProperty(MediaMenu,Home)</onright>
          <onright>50</onright>
          <onup>104</onup>
          <ondown>108</ondown>
          <onback>ClearProperty(MediaMenu,Home)</onback>
          <onback>50</onback>
          <font>IconTiny</font>
          <label>↸</label>
          <onclick>ActivateWindow(home)</onclick>
          <visible>![Window.IsActive(501) + Container.PlexFilter(recentlyAdded)] + !Container.PlexFilter(recentlyViewedShows)</visible>
        </control>
        <!-- Change Viewtype -->
        <control type="button" id="108">
          <texturefocus border="0"/>
          <texturenofocus border="0"/>
          <description>View As button</description>
          <posy>130</posy>
          <width>60</width>
          <height>35</height>
          <textoffsetx>15</textoffsetx>
          <textcolor>grey</textcolor>
          <focusedcolor>$VAR[Colour_ThemeColourVar]</focusedcolor>
          <textwidth>300</textwidth>
          <aligny>center</aligny>
          <font>IconTiny</font>
          <onleft>200</onleft>
          <onright>ClearProperty(MediaMenu,Home)</onright>
          <onright>50</onright>
          <onup>107</onup>
          <ondown>104</ondown>
          <onback>ClearProperty(MediaMenu,Home)</onback>
          <onback>50</onback>
          <onclick>Container.NextViewMode</onclick>
          <label></label>
        </control>
      </control>
      <!-- Options Menu -->
      <control type="grouplist" id="200">
        <posx>0</posx>
        <posy>100</posy>
        <zorder>10</zorder>
        <width>350</width>
        <height>1080</height>
        <onright>SetFocus(9050,0)</onright>
        <onback>SetFocus(9050,0)</onback>
        <onleft>SetFocus(9050,0)</onleft>
        <!-- View Options Title -->
        <control type="label" id="201">
          <width>350</width>
          <height>52</height>
          <textoffsetx>15</textoffsetx>
          <font>font13_title</font>
          <label>31006</label>
          <textcolor>$VAR[Colour_ThemeColourVar]</textcolor>
          <aligny>center</aligny>
        </control>
        <!-- Change View type -->
        <control type="button" id="2">
          <description>View As button</description>
          <posy>60</posy>
          <textwidth>350</textwidth>
          <width>350</width>
          <height>60</height>
          <textoffsetx>15</textoffsetx>
          <textcolor>grey</textcolor>
          <focusedcolor>white</focusedcolor>
          <aligny>center</aligny>
          <font>font13</font>
          <onclick>Container.NextViewMode</onclick>
          <label>-</label>
        </control>
      </control>
    </control>
  </controls>
</window>
