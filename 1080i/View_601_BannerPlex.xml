<?xml version="1.0" encoding="UTF-8"?>
<includes>
  <!-- BannerPlex -->
  <include name="BannerPlex">
    <control type="group">
      <visible>Control.IsVisible(601) + !Window.IsActive(addoninformation)</visible>
      <include>ViewAnimation</include>
      <posy>-10</posy>
      <control type="image">
        <description>background image</description>
        <posx>90</posx>
        <posy>944</posy>
        <width>1740</width>
        <height>395</height>
        <texture border="40">panel_reflect.png</texture>
      </control>
      <control type="image">
        <description>background image</description>
        <posx>90</posx>
        <posy>578</posy>
        <width>1740</width>
        <height>395</height>
        <texture border="40">listpanel_back.png</texture>
      </control>
      <control type="panel" id="601">
        <posx>120</posx>
        <posy>610</posy>
        <width>1680</width>
        <height>330</height>
        <onleft>SetProperty(MediaMenu,True,home)</onleft>
        <onleft>SetFocus(9050,0)</onleft>
        <onright>noop</onright>
        <onup>601</onup>
        <ondown>601</ondown>
        <pagecontrol>60</pagecontrol>
        <preloaditems>2</preloaditems>
        <viewtype label="BannerPlex">icons</viewtype>
        <scrolltime tween="quadratic" easing="out">300</scrolltime>
        <visible>Container.Content(tvshows)</visible>
        <itemlayout height="110" width="560">
          <control type="image">
            <width>560</width>
            <height>110</height>
            <aspectratio>scale</aspectratio>
            <texture>$INFO[ListItem.Art(banner)]</texture>
            <bordertexture border="2">thumbs/panel_border3.png</bordertexture>
            <bordersize>4</bordersize>
            <colordiffuse>BAffffff</colordiffuse>
            <visible>!IsEmpty(ListItem.Art(banner)) | IsEmpty(ListItem.Art(fanart))</visible>
          </control>
          <control type="group">
            <visible>IsEmpty(ListItem.Art(banner))</visible>
            <control type="image">
              <width>560</width>
              <height>110</height>
              <aspectratio>scale</aspectratio>
              <texture>$INFO[ListItem.Art(fanart)]</texture>
              <bordertexture border="2">thumbs/panel_border3.png</bordertexture>
              <bordersize>4</bordersize>
              <colordiffuse>BAffffff</colordiffuse>
            </control>
          </control>
          <control type="image">
            <posx>490</posx>
            <posy>0</posy>
            <width>60</width>
            <height>60</height>
            <texture>$VAR[OverlayVar]</texture>
            <aspectratio align="center" aligny="top">keep</aspectratio>
            <bordersize>4</bordersize>
            <visible>!Skin.HasSetting(Enable.Circles)</visible>
          </control>
          <!-- Watched Status Upper Circle -->
          <control type="image">
            <posx>514</posx>
            <posy>10</posy>
            <width>36</width>
            <height>36</height>
            <aspectratio>keep</aspectratio>
            <texture>$VAR[OverlayVar]</texture>
            <colordiffuse>$VAR[Colour_BannerPlexWatchedStatusColourVar]</colordiffuse>
            <visible>Skin.HasSetting(Enable.Circles) + !Skin.HasSetting(Enable.LowerCircles)</visible>
          </control>
          <!-- Watched Status Lower Circle -->
          <control type="image">
            <posx>514</posx>
            <posy>64</posy>
            <width>36</width>
            <height>36</height>
            <aspectratio>keep</aspectratio>
            <texture>$VAR[OverlayVar]</texture>
            <colordiffuse>$VAR[Colour_BannerPlexWatchedStatusColourVar]</colordiffuse>
            <visible>Skin.HasSetting(Enable.Circles) + Skin.HasSetting(Enable.LowerCircles)</visible>
          </control>
          <control type="group">
            <posx>10</posx>
            <posy>10</posy>
            <include condition="!Skin.HasSetting(Disable.UnwatchedIcon) + !Skin.HasSetting(Enable.LowerCircles)">UnwatchedIcon</include>
          </control>
          <control type="group">
            <posx>10</posx>
            <posy>64</posy>
            <include condition="!Skin.HasSetting(Disable.UnwatchedIcon) + Skin.HasSetting(Enable.LowerCircles)">UnwatchedIcon</include>
          </control>
        </itemlayout>
        <focusedlayout height="110" width="560">
          <control type="group">
            <animation type="Focus" reversible="false">
              <effect type="zoom" start="95" end="100" time="200" tween="sine" easing="inout" center="auto"/>
              <effect type="fade" start="80" end="100" time="200" tween="sine" easing="in"/>
            </animation>
            <!-- Banner -->
            <control type="image">
              <width>560</width>
              <height>110</height>
              <aspectratio>scale</aspectratio>
              <texture>$INFO[ListItem.Art(banner)]</texture>
              <bordersize>8</bordersize>
              <visible>!IsEmpty(ListItem.Art(banner)) | IsEmpty(ListItem.Art(fanart))</visible>
            </control>
            <control type="image">
              <width>560</width>
              <height>110</height>
              <aspectratio>scale</aspectratio>
              <texture>empty.png</texture>
              <bordertexture border="8">thumbs/thumbnail_focused.png</bordertexture>
              <bordersize>8</bordersize>
              <visible>!IsEmpty(ListItem.Art(banner)) | IsEmpty(ListItem.Art(fanart))</visible>
              <colordiffuse>$VAR[Colour_BannerPlexHighlightColourVar]</colordiffuse>
            </control>
            <!-- Simulated Banner -->
            <control type="group">
              <visible>IsEmpty(ListItem.Art(banner))</visible>
              <control type="image">
                <width>560</width>
                <height>110</height>
                <aspectratio>scale</aspectratio>
                <texture>$INFO[ListItem.Art(fanart)]</texture>
                <bordersize>8</bordersize>
              </control>
              <control type="image">
                <width>560</width>
                <height>110</height>
                <aspectratio>scale</aspectratio>
                <texture>empty.png</texture>
                <bordertexture border="8">thumbs/thumbnail_focused.png</bordertexture>
                <bordersize>8</bordersize>
                <colordiffuse>$VAR[Colour_BannerPlexHighlightColourVar]</colordiffuse>
              </control>
            </control>
            <!-- Watched Status Ribbon -->
            <control type="image">
              <posx>490</posx>
              <posy>4</posy>
              <width>60</width>
              <height>60</height>
              <texture>$VAR[OverlayVar]</texture>
              <aspectratio align="center" aligny="top">keep</aspectratio>
              <bordersize>4</bordersize>
              <visible>!Skin.HasSetting(Enable.Circles)</visible>
            </control>
            <!-- Watched Status Upper Circle -->
            <control type="image">
              <posx>514</posx>
              <posy>10</posy>
              <width>36</width>
              <height>36</height>
              <aspectratio>keep</aspectratio>
              <texture>$VAR[OverlayVar]</texture>
              <colordiffuse>$VAR[Colour_BannerPlexWatchedStatusColourVar]</colordiffuse>
              <visible>Skin.HasSetting(Enable.Circles) + !Skin.HasSetting(Enable.LowerCircles)</visible>
            </control>
            <!-- Watched Status Lower Circle -->
            <control type="image">
              <posx>514</posx>
              <posy>64</posy>
              <width>36</width>
              <height>36</height>
              <aspectratio>keep</aspectratio>
              <texture>$VAR[OverlayVar]</texture>
              <colordiffuse>$VAR[Colour_BannerPlexWatchedStatusColourVar]</colordiffuse>
              <visible>Skin.HasSetting(Enable.Circles) + Skin.HasSetting(Enable.LowerCircles)</visible>
            </control>
            <control type="group">
              <posx>10</posx>
              <posy>10</posy>
              <include condition="!Skin.HasSetting(Disable.UnwatchedIcon) + !Skin.HasSetting(Enable.LowerCircles)">UnwatchedIcon</include>
            </control>
            <control type="group">
              <posx>10</posx>
              <posy>64</posy>
              <include condition="!Skin.HasSetting(Disable.UnwatchedIcon) + Skin.HasSetting(Enable.LowerCircles)">UnwatchedIcon</include>
            </control>
          </control>
        </focusedlayout>
      </control>
      <control type="scrollbar" id="60">
        <posx>1797</posx>
        <posy>609</posy>
        <width>14</width>
        <height>331</height>
        <onleft>50</onleft>
        <onright>SetProperty(MediaMenu,True,home)</onright>
        <onright>SetFocus(9050,0)</onright>
        <ondown>60</ondown>
        <onup>60</onup>
        <showonepage>false</showonepage>
        <texturesliderbackground>-</texturesliderbackground>
        <texturesliderbar colordiffuse="55ffffff" border="1">scrollbar/texturesliderbar2.png</texturesliderbar>
        <texturesliderbarfocus border="1">scrollbar/texturesliderbar2.png</texturesliderbarfocus>
        <animation effect="fade" start="100" end="0" time="500" delay="500" condition="!Control.HasFocus(60) + !Container.Scrolling">Conditional</animation>
      </control>
    </control>
  </include>
</includes>
