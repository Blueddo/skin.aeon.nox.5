<?xml version="1.0" encoding="UTF-8"?>
<includes>
  <!-- InfoWall Watched Status -->
  <include name="InfoWall_WatchedStatusNF">
    <!-- Watched Status Ribbon -->
    <control type="image">
      <posx>120</posx>
      <posy>0</posy>
      <width>80</width>
      <height>80</height>
      <texture>$VAR[OverlayVar]</texture>
      <aspectratio align="center" aligny="top">keep</aspectratio>
      <bordersize>1</bordersize>
      <visible>!Skin.HasSetting(Enable.Circles)</visible>
    </control>
    <!-- Watched Status Upper Circle -->
    <control type="image">
      <posx>149</posx>
      <posy>15</posy>
      <width>36</width>
      <height>36</height>
      <aspectratio>keep</aspectratio>
      <texture>$VAR[OverlayVar]</texture>
      <colordiffuse>$VAR[Colour_InfoWallWatchedStatusColourVar]</colordiffuse>
      <visible>Skin.HasSetting(Enable.Circles) + !Skin.HasSetting(Enable.LowerCircles)</visible>
    </control>
    <!-- Unwatched Episodes Upper -->
    <control type="group">
      <posx>15</posx>
      <posy>15</posy>
      <include condition="!Skin.HasSetting(Disable.UnwatchedIcon) + !Skin.HasSetting(Enable.LowerCircles)">UnwatchedIcon</include>
    </control>
    <!-- Watched Status Lower Circle -->
    <control type="image">
      <posx>149</posx>
      <posy>249</posy>
      <width>36</width>
      <height>36</height>
      <aspectratio>keep</aspectratio>
      <texture>$VAR[OverlayVar]</texture>
      <colordiffuse>$VAR[Colour_InfoWallWatchedStatusColourVar]</colordiffuse>
      <visible>Skin.HasSetting(Enable.Circles) + Skin.HasSetting(Enable.LowerCircles)</visible>
    </control>
    <!-- Unwatched Episodes Lower -->
    <control type="group">
      <posx>15</posx>
      <posy>249</posy>
      <include condition="!Skin.HasSetting(Disable.UnwatchedIcon) + Skin.HasSetting(Enable.LowerCircles)">UnwatchedIcon</include>
    </control>
  </include>
  <include name="InfoWall_WatchedStatusFO">
    <!-- Watched Status Ribbon -->
    <control type="image">
      <posx>120</posx>
      <posy>3</posy>
      <width>80</width>
      <height>80</height>
      <texture>$VAR[OverlayVar]</texture>
      <aspectratio align="center" aligny="top">keep</aspectratio>
      <bordersize>2</bordersize>
      <visible>!Skin.HasSetting(Enable.Circles)</visible>
    </control>
    <!-- Watched Status Circle Upper -->
    <control type="image">
      <posx>149</posx>
      <posy>15</posy>
      <width>36</width>
      <height>36</height>
      <aspectratio>keep</aspectratio>
      <texture>$VAR[OverlayVar]</texture>
      <colordiffuse>$VAR[Colour_InfoWallWatchedStatusColourVar]</colordiffuse>
      <visible>Skin.HasSetting(Enable.Circles) + !Skin.HasSetting(Enable.LowerCircles)</visible>
    </control>
    <!-- Unwatched Episodes Upper -->
    <control type="group">
      <posx>15</posx>
      <posy>15</posy>
      <include condition="!Skin.HasSetting(Disable.UnwatchedIcon) + !Skin.HasSetting(Enable.LowerCircles)">UnwatchedIcon</include>
    </control>
    <!-- Watched Status Circle Lower -->
    <control type="image">
      <posx>149</posx>
      <posy>249</posy>
      <width>36</width>
      <height>36</height>
      <aspectratio>keep</aspectratio>
      <texture>$VAR[OverlayVar]</texture>
      <colordiffuse>$VAR[Colour_InfoWallWatchedStatusColourVar]</colordiffuse>
      <visible>Skin.HasSetting(Enable.Circles) + Skin.HasSetting(Enable.LowerCircles)</visible>
