  <!-- Video InfoWall -->
  <include name="VideoInfoWall">
    <control type="group">
      <visible>Control.IsVisible(51)</visible>
      <include>ViewAnimation</include>
      <posy>-65</posy>
      <!-- Reflection -->
      <control type="image">
        <description>background image</description>
        <posx>90</posx>
        <posy>1080</posy>
        <width>1740</width>
        <height>964</height>
        <texture border="40">panel_reflect.png</texture>
        <visible>!Skin.HasSetting(InfoWall.Alternate)</visible>
      </control>
      <!-- Background Panel -->
      <control type="image">
        <description>background image</description>
        <posx>90</posx>
        <posy>148</posy>
        <width>1740</width>
        <height>964</height>
        <texture colordiffuse="E6FFFFFF" border="40">listpanel_back.png</texture>
        <visible>!Skin.HasSetting(InfoWall.Alternate)</visible>
      </control>
      <!-- Scrollbar -->
      <control type="scrollbar" id="60">
        <posx>104</posx>
        <posy>179</posy>
        <width>14</width>
        <height>900</height>
        <colordiffuse>55ffffff</colordiffuse>
        <onright>50</onright>
        <onleft>SetProperty(MediaMenu,True,home)</onleft>
        <onleft>SetFocus(9050,0)</onleft>
        <ondown>60</ondown>
        <onup>60</onup>
        <showonepage>false</showonepage>
        <texturesliderbackground>-</texturesliderbackground>
        <texturesliderbar border="1">scrollbar/texturesliderbar2.png</texturesliderbar>
        <texturesliderbarfocus border="1">scrollbar/texturesliderbar2.png</texturesliderbarfocus>
        <animation effect="fade" start="100" end="0" time="500" delay="500" condition="!Control.HasFocus(60) + !Container.Scrolling">Conditional</animation>
      </control>
      <!-- Fanart -->
      <control type="image">
        <posx>1120</posx>
        <posy>179</posy>
        <width>680</width>
        <height>400</height>
        <aspectratio>scale</aspectratio>
        <texture>$INFO[ListItem.Art(fanart)]</texture>
        <fadetime>400</fadetime>
        <bordertexture border="2">thumbs/panel_border3.png</bordertexture>
        <bordersize>2</bordersize>
      </control>
      <!-- Title -->
      <control type="label">
        <posx>1120</posx>
        <posy>580</posy>
        <width>628</width>
        <height>60</height>
        <font>font16_title</font>
        <textcolor>grey</textcolor>
        <scroll>true</scroll>
        <label>[B]$VAR[FloorLabelVar][/B]</label>
        <textoffsetx>15</textoffsetx>
        <visible>!Skin.HasSetting(InfoWall.ResolutionDisable)</visible>
      </control>
      <control type="label">
        <posx>1120</posx>
        <posy>580</posy>
        <width>680</width>
        <height>60</height>
        <font>font16_title</font>
        <textcolor>grey</textcolor>
        <scroll>true</scroll>
        <label>[B]$VAR[FloorLabelVar][/B]</label>
        <textoffsetx>15</textoffsetx>
        <visible>Skin.HasSetting(InfoWall.ResolutionDisable)</visible>
      </control>
      <!-- Resolution Flag -->
      <control type="image">
        <posx>1748</posx>
        <posy>596</posy>
        <width>42</width>
        <height>28</height>
        <aspectratio>keep</aspectratio>
        <texture>$INFO[ListItem.Property(mediaTag-videoResolution),overlays/list/,.png]</texture>
        <visible>!Skin.HasSetting(InfoWall.ResolutionDisable)</visible>
      </control>
      <control type="grouplist">
        <posx>1135</posx>
        <posy>640</posy>
        <width>680</width>
        <height>270</height>
        <!-- Genre -->
        <control type="label">
          <label>$INFO[ListItem.Genre]</label>
          <width>680</width>
          <height>40</height>
          <aligny>top</aligny>
          <font>font14</font>
          <textcolor>$VAR[Colour_InfoWallThemeColourVar]</textcolor>
          <visible>!IsEmpty(ListItem.Genre)</visible>
        </control>
        <!-- Info -->
        <control type="grouplist">
          <visible>![Container.PlexContent(tvshows) | Container.PlexContent(seasons)]</visible>
          <orientation>horizontal</orientation>
          <width>680</width>
          <height>40</height>
          <align>left</align>
          <aligny>center</aligny>
          <!-- Year -->
          <control type="label">
            <width min="20" max="226">auto</width>
            <height>40</height>
            <align>left</align>
            <aligny>center</aligny>
            <font>font14</font>
            <textcolor>grey2</textcolor>
            <label>$INFO[ListItem.Year] [B]•[/B] </label>
            <visible>!IsEmpty(ListItem.Year) + ListItem.Type(movie)</visible>
          </control>
          <!-- Date -->
          <control type="label">
            <width min="20" max="226">auto</width>
            <height>40</height>
            <align>left</align>
            <aligny>center</aligny>
            <font>font14</font>
            <textcolor>grey2</textcolor>
            <label>$INFO[ListItem.Date] [B]•[/B] </label>
            <visible>!IsEmpty(Container(11000).ListItem.Date) + ListItem.Type(episode)</visible>
          </control>
          <!-- User Rating -->
          <control type="label">
            <width min="20" max="299">auto</width>
            <height>40</height>
            <textcolor>$VAR[Colour_InfoWallThemeColourVar]</textcolor>
            <align>left</align>
            <aligny>center</aligny>
            <font>font14</font>
            <textcolor>grey2</textcolor>
            <label>$VAR[RatingVar] [COLOR white2][B]•[/B] [/COLOR]</label>
            <visible>!IsEmpty(ListItem.Property(hasUserRating))</visible>
          </control>
          <!-- Standard Rating -->
          <control type="label">
            <width min="20" max="299">auto</width>
            <height>40</height>
            <align>left</align>
            <aligny>center</aligny>
            <label>$VAR[RatingVar] [B]•[/B] </label>
            <font>font14</font>
            <textcolor>grey2</textcolor>
            <visible>IsEmpty(ListItem.Property(hasUserRating)) + IsEmpty(ListItem.Property(ratingType)) + !IsEmpty(ListItem.RatingAndVotes)</visible>
          </control>
          <!-- IMDb Rating -->
          <control type="image">
            <width>51</width>
            <height>40</height>
            <align>left</align>
            <aligny>center</aligny>
            <texture>imdb_51x40.png</texture>
            <aspectratio align="left" aligny="center">keep</aspectratio>
            <visible>IsEmpty(ListItem.Property(hasUserRating)) + String.IsEqual(ListItem.Property(ratingType),imdb) + !IsEmpty(ListItem.RatingAndVotes)</visible>
          </control>
          <control type="label">
            <width min="20" max="299">auto</width>
            <height>40</height>
            <align>left</align>
            <aligny>center</aligny>
            <label> $INFO[ListItem.Property(rating)] [B]•[/B] </label>
            <font>font14</font>
            <textcolor>grey2</textcolor>
            <visible>IsEmpty(ListItem.Property(hasUserRating)) + String.IsEqual(ListItem.Property(ratingType),imdb) + !IsEmpty(ListItem.RatingAndVotes)</visible>
          </control>
          <!-- Rotten Tomato Ratings -->
          <control type="image">
            <width>32</width>
            <height>40</height>
            <align>left</align>
            <aligny>center</aligny>
            <texture>rottentomatoes/32x32/$INFO[ListItem.Property(ratingImage)]</texture>
            <aspectratio align="left" aligny="center">keep</aspectratio>
            <visible>String.IsEqual(ListItem.Property(ratingType),rottentomatoes) + IsEmpty(ListItem.Property(hasUserRating))</visible>
          </control>
          <control type="label">
            <height>40</height>
            <width min="20" max="121">auto</width>
            <aligny>center</aligny>
            <font>font14</font>
            <textcolor>grey2</textcolor>
            <label> $INFO[ListItem.Property(ratingPercent)]% </label>
            <visible>String.IsEqual(ListItem.Property(ratingType),rottentomatoes) + IsEmpty(ListItem.Property(hasUserRating))</visible>
          </control>
          <control type="image">
            <width>32</width>
            <height>40</height>
            <aligny>center</aligny>
            <texture>rottentomatoes/32x32/$INFO[ListItem.Property(audienceRatingImage)]</texture>
            <aspectratio align="left" aligny="center">keep</aspectratio>
            <visible>String.IsEqual(ListItem.Property(ratingType),rottentomatoes) + IsEmpty(ListItem.Property(hasUserRating))</visible>
          </control>
          <control type="label">
            <height>40</height>
            <width min="20" max="121">auto</width>
            <aligny>center</aligny>
            <font>font14</font>
            <textcolor>grey2</textcolor>
            <label> $INFO[ListItem.Property(audienceRatingPercent)]% [B]•[/B] </label>
            <visible>String.IsEqual(ListItem.Property(ratingType),rottentomatoes) + IsEmpty(ListItem.Property(hasUserRating))</visible>
          </control>
          <!-- Duration On Deck -->
          <control type="label">
            <width min="20" max="299">auto</width>
            <height>40</height>
            <label>$VAR[DurationHrMinVar]</label>
            <aligny>center</aligny>
            <font>font14</font>
            <textcolor>grey2</textcolor>
          </control>
        </control>
        <!-- Display Number of Episodes -->
        <control type="label">
          <label>$LOCALIZE[42260]: $INFO[ListItem.episode] ($INFO[ListItem.Property(UnWatchedEpisodes)] $LOCALIZE[42261])</label>
          <width>680</width>
          <height>40</height>
          <textoffset>0</textoffset>
          <aligny>center</aligny>
          <font>font14</font>
          <textcolor>grey2</textcolor>
          <visible>Container.PlexContent(tvshows) | Container.PlexContent(seasons)</visible>
        </control>
      </control>
      <!-- Plot -->
      <control type="textbox">
        <label>$VAR[PlotVar]</label>
        <posy>734</posy>
        <posx>1135</posx>
        <width>650</width>
        <height>342</height>
        <font>font14_textbox</font>
        <autoscroll time="3000" delay="6000" repeat="5000">Skin.HasSetting(Enable.AutoScroll) + !Control.HasFocus(61)</autoscroll>
        <pagecontrol>61</pagecontrol>
        <include>ShowCaseInfoPanelButtonsValues</include>
        <visible>!ListItem.Type(directory)</visible>
      </control>
      <control type="panel" id="51">
        <posx>120</posx>
        <posy>179</posy>
        <width>1000</width>
        <height>900</height>
        <onleft>SetProperty(MediaMenu,True,home)</onleft>
        <onleft>SetFocus(9050,0)</onleft>
        <onright>noop</onright>
        <onup>51</onup>
        <ondown>51</ondown>
        <pagecontrol>60</pagecontrol>
        <preloaditems>2</preloaditems>
        <viewtype label="InfoWall">icons</viewtype>
        <scrolltime tween="quadratic" easing="out">300</scrolltime>
