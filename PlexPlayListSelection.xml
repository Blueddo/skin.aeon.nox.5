<?xml version="1.0" encoding="UTF-8"?>
<window id="10094">
	<defaultcontrol always="true">500</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<onload>SetProperty(Window.HasSettings,True,home)</onload>
	<onload>ClearProperty(MediaMenu,Home)</onload>
	<onload>Skin.SetString(SectionType,PlaylistSelection)</onload>
	<onunload>Skin.Reset(SectionType)</onunload>
	<onunload>ClearProperty(Window.HasSettings,Home)</onunload>
	<views>500</views>
	<controls>

		<!-- Background -->
		<control type="group">
			<animation effect="fade" time="600">WindowOpen</animation>
			<animation effect="fade" time="600">WindowClose</animation>
			<control type="image">
				<description>Normal Default Background Image</description>
				<visible>ListItem.Type(videoplaylist) | ListItem.Type(videoplayqueue)</visible>
				<include>FanartCommonValues</include>
				<texture>$INFO[ListItem.CompositeImage(width=1920;height=1080;cols=6;rows=2)]</texture>
			</control>
			<control type="image">
				<description>Normal Default Background Image</description>
				<visible>ListItem.Type(musicplaylist) | ListItem.Type(musicplayqueue)</visible>
				<include>FanartCommonValues</include>
				<texture>$INFO[ListItem.CompositeImage(width=1920;height=1080;cols=4;rows=2)]</texture>
			</control>
			<control type="image">
				<description>Normal Default Background Image</description>
				<visible>ListItem.Type(photoplaylist) | ListItem.Type(photoplayqueue)</visible>
				<include>FanartCommonValues</include>
				<texture>$INFO[ListItem.CompositeImage(width=1920;height=1080;cols=3;rows=3)]</texture>
			</control>
			
			<!-- Snow Animation -->
			<include>SnowBackground</include>
			
			<control type="image">
				<posx>0</posx>
				<posy>-40</posy>
				<width>696</width>
				<height>914</height>
				<texture border="1">vignette.png</texture>
				<animation effect="slide" tween="cubic" time="720" start="-696" end="0,0">VisibleChange</animation>
			</control>
			<control type="image">
				<posx>1224</posx>
				<posy>-40</posy>
				<width>696</width>
				<height>914</height>
				<texture border="1">vignetteflipx.png</texture>
				<animation effect="slide" tween="cubic" time="720" start="696" end="0,0">VisibleChange</animation>
			</control>
			<control type="group">
				<include>Window_OpenClose_Animation</include>
				<include>ViewAnimation</include>
				<control type="image">
					<posx>0</posx>
					<posy>400</posy>
					<width>1920</width>
					<height>680</height>
					<texture>floor.png</texture>
					<colordiffuse>$VAR[Colour_ThemeColourVar]</colordiffuse>
				</control>
			</control>

		</control>

		<control type="group">
			<include>Window_OpenClose_Animation</include>
			<control type="group">
				<include>ViewAnimation</include>
				<posy>0</posy>
				<include>WallBackPanel</include>
				<control type="panel" id="500">
					<posx>120</posx>
					<posy>179</posy>
					<width>1680</width>
					<height>720</height>
					<onleft>500</onleft>
					<onright>500</onright>
					<onup>500</onup>
					<ondown>500</ondown>
					<pagecontrol>60</pagecontrol>
					<scrolltime tween="quadratic" easing="out">300</scrolltime>
					<itemlayout height="240" width="240">
						<control type="image">
							<posx>0</posx>
							<posy>0</posy>
							<width>240</width>
							<height>240</height>
							<aspectratio>scale</aspectratio>
							<texture>$INFO[ListItem.CompositeImage(width=240;height=240;cols=2;rows=2)]</texture>
							<bordertexture border="2">thumbs/panel_border3.png</bordertexture>
							<bordersize>2</bordersize>
							<colordiffuse>BAffffff</colordiffuse>
						</control>
						<control type="image">
							<width>240</width>
							<height>240</height>
							<texture>thumbs/poster_black.png</texture>
							<bordersize>2</bordersize>
						</control>
						<control type="label">
							<posx>120</posx>
							<posy>200</posy>
							<width>240</width>
							<height>30</height>
							<align>center</align>
							<textoffsetx>15</textoffsetx>
							<textcolor>grey2</textcolor>
							<info>ListItem.Label</info>
						</control>
					</itemlayout>
					<focusedlayout height="240" width="240">
						<control type="group">
							<animation type="Focus">
								<effect type="zoom" start="95" end="100" time="200" tween="sine" easing="inout" center="auto" />
								<effect type="fade" start="80" end="100" time="200" tween="sine" easing="in" />
							</animation>
							<control type="image">
								<posx>0</posx>
								<posy>0</posy>
								<width>240</width>
								<height>240</height>
								<aspectratio>scale</aspectratio>
								<texture>$INFO[ListItem.CompositeImage(width=240;height=240;cols=2;rows=2)]</texture>
								<bordersize>8</bordersize>
							</control>
							<control type="image">
								<posx>0</posx>
								<posy>0</posy>
								<width>240</width>
								<height>240</height>
								<aspectratio>scale</aspectratio>
								<texture>empty.png</texture>
								<bordertexture border="8">thumbs/thumbnail_focused.png</bordertexture>
								<bordersize>8</bordersize>
								<colordiffuse>$VAR[Colour_IconsHighlightColourVar]</colordiffuse>
							</control>
							<control type="group">
								<control type="image">
									<width>240</width>
									<height>240</height>
									<texture>thumbs/poster_black.png</texture>
									<bordersize>8</bordersize>
								</control>
								<control type="label">
									<posx>120</posx>
									<posy>200</posy>
									<width>240</width>
									<height>30</height>
									<align>center</align>
									<textoffsetx>15</textoffsetx>
									<textcolor>white</textcolor>
									<info>ListItem.Label</info>
								</control>
							</control>
						</control>
					</focusedlayout>
				</control>
				<control type="scrollbar" id="60">
					<posx>1801</posx>
					<posy>179</posy>
					<width>8</width>
					<height>720</height>
					<colordiffuse>55ffffff</colordiffuse>
					<onleft>50</onleft>
					<onright>SetProperty(MediaMenu,True,home)</onright>
					<onright>SetFocus(9050,0)</onright>
					<ondown>60</ondown>
					<onup>60</onup>
					<showonepage>false</showonepage>
					<texturesliderbackground>-</texturesliderbackground>
					<texturesliderbar border="1">scrollbar/texturesliderbar2.png</texturesliderbar>
					<texturesliderbarfocus border="1">scrollbar/texturesliderbar2.png</texturesliderbarfocus>
					<animation effect="fade" start="100" end="0" time="500" delay="500" condition="!Control.HasFocus(60) + !Container.Scrolling">Conditional</animation>
				</control>
			</control>
		</control>

		<control type="group">
			<animation effect="slide" tween="cubic" time="720" start="0,806" end="0,0">VisibleChange</animation>
			<animation effect="slide" tween="cubic" time="720" start="0,806" end="0,0">WindowOpen</animation>
			<animation effect="slide" tween="cubic" time="720" end="0,806" start="0,0">WindowClose</animation>
			<posy>-30</posy>

			<control type="group">
				<animation effect="slide" tween="cubic" time="720" start="0,806" end="0,0">VisibleChange</animation>
				<control type="group">
					<posx>90</posx>
					<posy>1010</posy>
					<control type="label">
						<posx>0</posx>
						<posy>0</posy>
						<width>1150</width>
						<height>42</height>
						<aligny>top</aligny>
						<align>left</align>
						<font>font16_title</font>
						<textcolor>white</textcolor>
						<scroll>true</scroll>
						<label>[B]$INFO[ListItem.Label][/B]</label>
						<textoffsety>-2</textoffsety>
						<textoffsetx>30</textoffsetx>
					</control>
				</control>
			</control>
			<control type="image">
				<posx>0</posx>
				<posy>970</posy>
				<width>1920</width>
				<height>140</height>
				<texture border="1">gradient_floor.png</texture>
				<colordiffuse>$VAR[Colour_ThemeColourVar]</colordiffuse>
			</control>
		</control>

		<include>ScrollOffsetLabel</include>
		<include>Topbar</include>
		
	</controls>
</window>